<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
  <Properties>
    <Property name="LOG_PATTERN">%-4r [%t] %-5p %c %x -%m%n</Property>
  </Properties>

  <Appenders>
    <Console name="console" target="SYSTEM_OUT" follow="true">
      <PatternLayout pattern="${LOG_PATTERN}"/>
      <MarkerFilter marker="WRITE_DIAGNOSTIC" onMatch="DENY" onMismatch="ACCEPT" />
      <MarkerFilter marker="READ_DIAGNOSTIC" onMatch="DENY" onMismatch="ACCEPT" />
    </Console>
    <RollingFile
        name="writeRequestDiagnosticsRollingFileAppender"
        fileName="/tmp/client_diagnostic_logs/write/request_diagnostics.log"
        filePattern="/tmp/client_diagnostic_logs/write/request_diagnostics.%d{yyyy-MM-dd-hh-mm}.log.gz"
        ignoreExceptions="false">
      <PatternLayout pattern="${LOG_PATTERN}"/>
      <MarkerFilter marker="WRITE_DIAGNOSTIC" onMatch="ACCEPT" onMismatch="DENY" />
      <Policies>
        <OnStartupTriggeringPolicy />
        <SizeBasedTriggeringPolicy size="2KB" />
      </Policies>
    </RollingFile>

    <RollingFile
        name="readRequestDiagnosticsRollingFileAppender"
        fileName="/tmp/client_diagnostic_logs/read/request_diagnostics.log"
        filePattern="/tmp/client_diagnostic_logs/read/request_diagnostics.%d{yyyy-MM-dd-hh-mm}.log.gz"
        ignoreExceptions="false">
      <PatternLayout pattern="${LOG_PATTERN}"/>
      <MarkerFilter marker="READ_DIAGNOSTIC" onMatch="ACCEPT" onMismatch="DENY" />
      <Policies>
        <OnStartupTriggeringPolicy />
        <SizeBasedTriggeringPolicy size="2KB" />
      </Policies>
    </RollingFile>
  </Appenders>
  <Loggers>
    <Logger name="log4j.category.org.apache.http" level="INFO"/>
    <Logger name="log4j.category.org.apache.http.wire" level="INFO"/>
    <Logger name="log4j.category.org.apache.http.header" level="INFO"/>
    <Root level="info">
      <AppenderRef ref="console"/>
      <AppenderRef ref="writeRequestDiagnosticsRollingFileAppender"/>
      <AppenderRef ref="readRequestDiagnosticsRollingFileAppender"/>
    </Root>
  </Loggers>
</Configuration>